<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_demo"
            app:startDestination="@id/homeFragment">

    <fragment android:id="@+id/homeFragment"
              android:name="com.religion76.navigationdemo.HomeFragment"
              android:label="HomeFragment">
        <action android:id="@+id/action_homeFragment_to_editFragment" app:destination="@id/editFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim" app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>

    <fragment android:id="@+id/editFragment" android:name="com.religion76.navigationdemo.EditFragment"
              android:label="EditFragment"/>
    <fragment android:id="@+id/discoveryFragment" android:name="com.religion76.navigationdemo.DiscoveryFragment"
              android:label="DiscoveryFragment"/>
    <fragment android:id="@+id/userFragment" android:name="com.religion76.navigationdemo.UserFragment"
              android:label="UserFragment"/>

</navigation>